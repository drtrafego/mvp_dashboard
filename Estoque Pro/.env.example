# ========================================
# ESTOQUE PRO - Environment Variables
# ========================================
# Copie este arquivo para .env e preencha com suas credenciais.

# ========================================
# DATABASE
# ========================================
# PostgreSQL connection string (Neon, Supabase, Railway, etc.)
DATABASE_URL="postgresql://user:password@localhost:5432/estoquepro?schema=public"

# ========================================
# AUTH - Stack Auth
# ========================================
# Obtenha em: https://app.stack-auth.com
NEXT_PUBLIC_STACK_PROJECT_ID="your-stack-project-id"
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY="your-stack-publishable-client-key"
STACK_SECRET_SERVER_KEY="your-stack-secret-server-key"

# Auth Secret for NextAuth sessions
AUTH_SECRET="generate-a-random-32-char-string-here"

# ========================================
# STRIPE - Pagamentos
# ========================================
# Obtenha em: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# IDs dos preços (crie em Stripe > Products > Prices)
STRIPE_PRICE_ID_MONTHLY="price_monthly_id"
STRIPE_PRICE_ID_SEMESTRAL="price_semestral_id"
STRIPE_PRICE_ID_YEARLY="price_yearly_id"

# ========================================
# APP CONFIG
# ========================================
# URL base da aplicação (para callbacks, webhooks, etc.)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Ambiente: development | production
NODE_ENV="development"

# Super Admin emails (comma-separated)
SUPER_ADMIN_EMAIL="admin@example.com"

# ========================================
# EMAIL - Resend (Opcional)
# ========================================
# Obtenha em: https://resend.com/api-keys
RESEND_API_KEY="re_your_resend_api_key"

# ========================================
# ANALYTICS (Opcional)
# ========================================
# Meta/Facebook Pixel
META_PIXEL_ID=""
META_ACCESS_TOKEN=""

# Google Analytics 4
GA4_MEASUREMENT_ID=""
GA4_API_SECRET=""

# ========================================
# RATE LIMITING - Upstash Redis (Opcional)
# ========================================
# Obtenha em: https://console.upstash.com
# UPSTASH_REDIS_REST_URL=""
# UPSTASH_REDIS_REST_TOKEN=""
